---
title: The Bakery
---

{% if hero %}

  <style>
    .hero {
      background: #fff url({{ hero }}) no-repeat center center/cover;
    }
  </style>

{% endif %}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/bundle.css">
  <title>{{ title }}</title>
</head>
<body>
  {% include "./header.njk" %}
  <div class="hero">
    {% if badge%}
      <img class="hero--badge" src=" {{ badge }}"></img>
    {% endif %}
  </div>
  {{ content | safe }}
  {% include "./footer.njk" %}
  <script src="/index.js"></script>
</body>
</html>
